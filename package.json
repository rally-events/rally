{
  "name": "@rally/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Rally monorepo",
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter @rally/db dev\"",
    "build": "pnpm --filter @rally/db build && pnpm --filter backend build && pnpm --filter frontend build",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check"
  },
  "workspaces": [
    "packages/*",
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
