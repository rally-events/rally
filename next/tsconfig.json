{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@rally/schemas": ["../packages/schemas/src"],
      "@rally/db": ["../packages/db/src"],
      "@rally/api": ["../packages/api/src"],
      "@rally/api-client": ["../packages/api-client/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../packages/schemas" },
    { "path": "../packages/db" },
    { "path": "../packages/api" },
    { "path": "../packages/api-client" }
  ]
}
