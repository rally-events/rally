{
  "name": "@rally/db",
  "version": "1.0.0",
  "description": "Rally database package with Drizzle ORM and Supabase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "drizzle-orm": "catalog:",
    "postgres": "^3.4.7"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    }
  },
  "devDependencies": {
    "@types/node": "^20.19.2",
    "drizzle-kit": "^0.31.4"
  }
}
